{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Minimalist TODO Application Main SAM Stack",
  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "stage", "prod"],
      "Description": "Environment name passed to nested applications"
    }
  },
  "Resources": {
    "DatabaseStack": {
      "Type": "AWS::Serverless::Application",
      "Properties": {
        "Location": "stacks/database/database.json",
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          }
        }
      }
    },
    "FrontendStack": {
      "Type": "AWS::Serverless::Application",
      "Properties": {
        "Location": "stacks/frontend/frontend.json",
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          }
        }
      }
    }
  },
  "Outputs": {
    "Environment": {
      "Description": "Deployment environment",
      "Value": {
        "Ref": "Environment"
      }
    },
    "MainTableName": {
      "Description": "Name of the main DynamoDB table",
      "Value": {
        "Fn::GetAtt": ["DatabaseStack", "Outputs.MainTableName"]
      }
    },
    "MainTableArn": {
      "Description": "ARN of the main DynamoDB table",
      "Value": {
        "Fn::GetAtt": ["DatabaseStack", "Outputs.MainTableArn"]
      }
    },
    "FrontendURL": {
      "Description": "URL of the static website",
      "Value": {
        "Fn::GetAtt": ["FrontendStack", "Outputs.FrontendURL"]
      }
    },
    "FrontendBucketName": {
      "Description": "S3 bucket for static website files",
      "Value": {
        "Fn::GetAtt": ["FrontendStack", "Outputs.FrontendBucketName"]
      }
    }
  }
}
