{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Minimalist TODO Application - HTTP API to Step Functions Integration",
  "Parameters": {
    "RegisterStateMachineArn": {
      "Type": "String",
      "Description": "ARN of the Step Functions state machine triggered by POST /register"
    }
  },
  "Resources": {
    "HttpApi": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Name": "MinimalistTodoHttpApi",
        "ProtocolType": "HTTP"
      }
    },
    "HttpApiStepFunctionsRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "apigateway.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AllowStepFunctionExecution",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "states:StartExecution",
                  "Resource": { "Ref": "RegisterStateMachineArn" }
                }
              ]
            }
          }
        ]
      }
    },
    "RegisterIntegration": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": { "Ref": "HttpApi" },
        "IntegrationType": "AWS_PROXY",
        "IntegrationSubtype": "StepFunctions-StartExecution",
        "CredentialsArn": { "Fn::GetAtt": ["HttpApiStepFunctionsRole", "Arn"] },
        "RequestParameters": {
          "Input": "$request.body",
          "StateMachineArn": { "Ref": "RegisterStateMachineArn" }
        },
        "PayloadFormatVersion": "1.0",
        "TimeoutInMillis": 10000
      }
    },
    "RegisterRoute": {
      "Type": "AWS::ApiGatewayV2::Route",
      "Properties": {
        "ApiId": { "Ref": "HttpApi" },
        "RouteKey": "POST /register",
        "Target": {
          "Fn::Join": ["/", ["integrations", { "Ref": "RegisterIntegration" }]]
        }
      }
    },
    "HttpApiStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": { "Ref": "HttpApi" },
        "StageName": "$default",
        "AutoDeploy": true
      }
    }
  },
  "Outputs": {
    "HttpApiUrl": {
      "Description": "HTTP API default endpoint",
      "Value": {
        "Fn::Sub": "https://${HttpApi}.execute-api.${AWS::Region}.amazonaws.com"
      }
    }
  }
}
