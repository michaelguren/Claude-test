{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Main CloudFormation template for Minimalist TODO App",
  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "prod"],
      "Description": "Environment (dev or prod)"
    },
    "AppName": {
      "Type": "String",
      "Default": "minimalist-todo",
      "Description": "Application name used for resource naming"
    },
    "S3Bucket": {
      "Type": "String",
      "Description": "S3 bucket containing CloudFormation templates"
    }
  },
  "Resources": {
    "FrontendStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Sub": "https://${S3Bucket}.s3.${AWS::Region}.amazonaws.com/frontend.json"
        },
        "Parameters": {
          "Environment": { "Ref": "Environment" }
        }
      }
    }
  },
  "Outputs": {
    "CloudFrontDomain": {
      "Description": "CloudFront distribution domain name",
      "Value": {
        "Fn::GetAtt": ["FrontendStack", "Outputs.CloudFrontDomainName"]
      }
    }
  }
}
