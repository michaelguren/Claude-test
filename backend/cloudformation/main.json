{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Minimalist TODO Application - Main Stack",
  "Parameters": {
    "AppName": {
      "Type": "String"
    },
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "stage", "prod"],
      "Description": "Environment name passed to nested stacks"
    }
  },
  "Resources": {
    "FrontendStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "domains/frontend/frontend.json",
        "Parameters": {
          "Environment": { "Ref": "Environment" }
        }
      }
    },
    "ApiStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "domains/api/api-gateway.json",
        "Parameters": {
          "RegisterStateMachineArn": {
            "Fn::GetAtt": [
              "AuthenticationStack",
              "Outputs.RegisterStateMachineArn"
            ]
          }
        }
      },
      "DependsOn": ["AuthenticationStack"]
    },
    "AuthenticationStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "domains/authentication/authentication.json"
      }
    }
  },
  "Outputs": {
    "Environment": {
      "Value": { "Ref": "Environment" }
    },
    "FrontendURL": {
      "Description": "URL of the website",
      "Value": { "Fn::GetAtt": ["FrontendStack", "Outputs.FrontendURL"] }
    },
    "FrontendBucketName": {
      "Description": "S3 bucket name for static website files",
      "Value": { "Fn::GetAtt": ["FrontendStack", "Outputs.FrontendBucketName"] }
    }
  }
}
