{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Minimalist TODO Application - Main Stack",
  "Parameters": {
    "AppName": {
      "Type": "String"
    }
  },
  "Resources": {
    "FrontendStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "domains/frontend/frontend.json"
      }
    },
    "ApiStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "domains/api/api-gateway.json",
        "Parameters": {
          "RegisterStateMachineArn": {
            "Fn::GetAtt": [
              "AuthenticationStack",
              "Outputs.RegisterStateMachineArn"
            ]
          }
        }
      },
      "DependsOn": ["AuthenticationStack"]
    },
    "AuthenticationStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "domains/authentication/authentication.json"
      }
    }
  },
  "Outputs": {
    "ApplicationURL": {
      "Description": "URL of the website",
      "Value": { "Fn::GetAtt": ["FrontendStack", "Outputs.ApplicationURL"] }
    },
    "S3BucketName": {
      "Description": "S3 bucket name for static website files",
      "Value": { "Fn::GetAtt": ["FrontendStack", "Outputs.S3BucketName"] }
    },
    "CloudFrontDistributionId": {
      "Description": "CloudFront distribution ID",
      "Value": {
        "Fn::GetAtt": ["FrontendStack", "Outputs.CloudFrontDistributionId"]
      }
    }
  }
}
