{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Minimalist TODO Application - Main Stack",
  "Parameters": {
    "AppName": {
      "Type": "String",
      "Description": "Application name from project-config.js"
    },
    "AuthEnabled": {
      "Type": "String",
      "Description": "Whether authentication is enabled (true/false)",
      "AllowedValues": ["true", "false"],
      "Default": "false"
    },
    "Stage": {
      "Type": "String",
      "Description": "Deployment stage (dev, prod)",
      "AllowedValues": ["dev", "prod"]
    },
    "TemplateBucket": {
      "Type": "String",
      "Description": "S3 bucket containing nested stack templates"
    }
  },
  "Conditions": {
    "CreateAuthResources": {
      "Fn::Equals": [{ "Ref": "AuthEnabled" }, "true"]
    }
  },
  "Resources": {
    "FrontendStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Sub": "https://${TemplateBucket}.s3.${AWS::Region}.amazonaws.com/frontend.json"
        },
        "Parameters": {
          "AppName": { "Ref": "AppName" },
          "Stage": { "Ref": "Stage" }
        }
      }
    },
    "AuthStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Condition": "CreateAuthResources",
      "Properties": {
        "TemplateURL": {
          "Fn::Sub": "https://${TemplateBucket}.s3.${AWS::Region}.amazonaws.com/auth.json"
        },
        "Parameters": {
          "AppName": { "Ref": "AppName" },
          "Stage": { "Ref": "Stage" },
          "CallbackURL": {
            "Fn::GetAtt": ["FrontendStack", "Outputs.WebsiteURL"]
          },
          "LogoutURL": { "Fn::GetAtt": ["FrontendStack", "Outputs.WebsiteURL"] }
        }
      }
    }
  },
  "Outputs": {
    "WebsiteURL": {
      "Description": "URL of the website",
      "Value": { "Fn::GetAtt": ["FrontendStack", "Outputs.WebsiteURL"] }
    }
  }
}
