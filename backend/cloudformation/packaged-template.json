{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Minimalist TODO Application - Main Stack",
    "Parameters": {
        "AppName": {
            "Type": "String"
        },
        "Environment": {
            "Type": "String",
            "Default": "dev",
            "AllowedValues": [
                "dev",
                "stage",
                "prod"
            ],
            "Description": "Environment name passed to nested stacks"
        }
    },
    "Resources": {
        "FrontendStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://s3.us-east-1.amazonaws.com/minimal-todo-templates-550398958311/71d09c079100b29419ba5d5801442772.template",
                "Parameters": {
                    "Environment": {
                        "Ref": "Environment"
                    }
                }
            }
        },
        "ApiStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://s3.us-east-1.amazonaws.com/minimal-todo-templates-550398958311/1f420a93929d2b868f12c69aebf5b6d0.template",
                "Parameters": {
                    "RegisterStateMachineArn": {
                        "Fn::GetAtt": [
                            "AuthenticationStack",
                            "Outputs.RegisterStateMachineArn"
                        ]
                    }
                }
            },
            "DependsOn": [
                "AuthenticationStack"
            ]
        },
        "AuthenticationStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://s3.us-east-1.amazonaws.com/minimal-todo-templates-550398958311/b089d16884272ad297b7e4da35c9453f.template"
            }
        }
    },
    "Outputs": {
        "Environment": {
            "Value": {
                "Ref": "Environment"
            }
        },
        "FrontendURL": {
            "Description": "URL of the website",
            "Value": {
                "Fn::GetAtt": [
                    "FrontendStack",
                    "Outputs.FrontendURL"
                ]
            }
        },
        "FrontendBucketName": {
            "Description": "S3 bucket name for static website files",
            "Value": {
                "Fn::GetAtt": [
                    "FrontendStack",
                    "Outputs.FrontendBucketName"
                ]
            }
        }
    }
}