{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "HTTP API Gateway integrating /register with Step Function using best practices",
  "Parameters": {
    "RegisterStateMachineArn": {
      "Type": "String",
      "Description": "ARN of the RegisterUser Step Function"
    }
  },
  "Resources": {
    "HttpApi": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Name": "MinimalistTodoHttpApi",
        "ProtocolType": "HTTP",
        "CorsConfiguration": {
          "AllowMethods": ["POST"],
          "AllowOrigins": ["*"],
          "AllowHeaders": ["*"]
        }
      }
    },
    "ApiGatewayStepFunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "apigateway.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "InvokeStepFunctionFromAPIGateway",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["states:StartExecution"],
                  "Resource": {
                    "Ref": "RegisterStateMachineArn"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "RegisterIntegration": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": {
          "Ref": "HttpApi"
        },
        "IntegrationType": "AWS_PROXY",
        "IntegrationSubtype": "StepFunctions-StartExecution",
        "CredentialsArn": {
          "Fn::GetAtt": ["ApiGatewayStepFunctionRole", "Arn"]
        },
        "RequestParameters": {
          "Input": "$request.body",
          "StateMachineArn": {
            "Ref": "RegisterStateMachineArn"
          }
        },
        "PayloadFormatVersion": "1.0",
        "TimeoutInMillis": 10000
      }
    },
    "RegisterRoute": {
      "Type": "AWS::ApiGatewayV2::Route",
      "Properties": {
        "ApiId": {
          "Ref": "HttpApi"
        },
        "RouteKey": "POST /register",
        "Target": {
          "Fn::Sub": "integrations/${RegisterIntegration}"
        }
      }
    },
    "HttpApiStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {
          "Ref": "HttpApi"
        },
        "StageName": "$default",
        "AutoDeploy": true
      }
    }
  },
  "Outputs": {
    "RegisterEndpoint": {
      "Description": "POST /register endpoint",
      "Value": {
        "Fn::Sub": "https://${HttpApi}.execute-api.${AWS::Region}.amazonaws.com/register"
      }
    }
  }
}
